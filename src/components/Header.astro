---
import Search from './Search.astro';

const navItems = [
  { title: 'Home', path: '/' },
 
  { title: 'About', path: '/about' },
];
---

<header class="sticky top-0 z-40 w-full backdrop-blur bg-white/90 dark:bg-tech-dark/90 border-b border-gray-200 dark:border-gray-700">
  <div class="container mx-auto px-4">
    <div class="flex h-16 items-center justify-between gap-4">
      <a href="/" class="flex items-center space-x-2">
        <span class="text-2xl font-bold text-tech-primary">TechAI News</span>
      </a>

      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a 
            href={item.path}
            class="text-tech-dark dark:text-gray-200 hover:text-tech-primary dark:hover:text-tech-primary transition-colors"
          >
            {item.title}
          </a>
        ))}
      </nav>
      
      <!-- Search Component -->
      <Search />
    </div>
  </div>
</header>

<script>
  import Fuse from 'fuse.js';
  window.Fuse = Fuse;
</script>
